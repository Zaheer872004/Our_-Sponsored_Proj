generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  id         Int       @id @default(autoincrement())
  email      String    @unique
  password   String
  name       String
  role       Role
  recruiter  Recruiter?
  student    Student?
}

model Recruiter {
  id         Int     @id @default(autoincrement())
  userId     Int     @unique
  user       User    @relation(fields: [userId], references: [id])
  industry    String
  fieldOfInterest FieldOfInterest
  resume     String  // or CV
  amount     Float?   // or Int if it's a whole number
}

model Student {
  id            Int            @id @default(autoincrement())
  userId        Int            @unique
  user          User           @relation(fields: [userId], references: [id])
  collegeName   String
  fieldOfInterest FieldOfInterest
  resume        String
}

enum Role {
  RECRUITER
  STUDENT
}

enum FieldOfInterest {
  FRONTEND
  BACKEND
  FULLSTACK
  AIML
  DEVOPS
  SOFTWARE_DEVELOPER_ENGINEER
  OTHER
}
